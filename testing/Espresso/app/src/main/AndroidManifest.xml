<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lft.espressointro">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".tasko.TaskMainActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".chiuki.list.SimpleListActivity" />
        <activity android:name=".chiuki.recylerview.RecyclerViewActivity" />
        <activity android:name=".chiuki.rotatescreen.RotateActivity" />
        <activity android:name=".chiuki.toolbar.ToolbarActivity" />
        <activity android:name=".SimpleActivity" />
        <activity android:name=".chiuki.idling.IdlingActivity" />

        <activity android:name=".twoactivities.ActivityFirst" />
        <activity android:name=".twoactivities.SecondActivity" />

        <activity android:name=".mockito.LoadDataActivity"/>
    </application>

</manifest>