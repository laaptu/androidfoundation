<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="makeSharedPreferences"
        android:text="Shared Prefs" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="makePrivateFolder"
        android:text="Private folder" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="makePublicFolder"
        android:text="Public folder" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="makeDatabase"
        android:text="Create Database" />


</LinearLayout>